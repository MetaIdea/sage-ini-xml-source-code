		<ClientBehaviors>
			<ModelConditionAudioLoopClientBehavior id="ModuleTag_TurnIntoIceSound">
				<ModelConditionSound Sound="UnitFreeze" RequiredFlags="PARALYZED" />
			</ModelConditionAudioLoopClientBehavior>
		</ClientBehaviors>
