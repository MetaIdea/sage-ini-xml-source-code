  <ModelConditionState
		ParseCondStateType="PARSE_NORMAL"
		ConditionsYes="IRONCURTAIN">
    <Model
			Name="=$SPECIAL_MODEL_STATE_MODEL" />
    <Material
			ShaderName="ObjectsIronCurtain.fx"
			TechniqueName="Default">
      <Constants>
        <Texture Name="DiffuseTexture">
          <Value>=$SPECIAL_MODEL_STATE_DIFFUSE_TEXTURE</Value>
        </Texture>
        <Texture Name="NormalMap">
          <Value>=$SPECIAL_MODEL_STATE_NORMAL_MAP</Value>
        </Texture>
        <Texture Name="SpecMap">
          <Value>=$SPECIAL_MODEL_STATE_SPECULAR_MAP</Value>
        </Texture>
        <Float Name="EnvMult">
          <Value>1.000000</Value>
        </Float>
        <Bool Name="AlphaTestEnable">
          <Value>false</Value>
        </Bool>
      </Constants>
    </Material>
  </ModelConditionState>

