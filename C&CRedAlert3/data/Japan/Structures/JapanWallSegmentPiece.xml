<?xml version="1.0" encoding="utf-8"?>
<AssetDeclaration xmlns="uri:ea.com:eala:asset" xmlns:xi="http://www.w3.org/2001/XInclude">
	<Tags></Tags>
	<Includes>
		<!-- Base Object -->
		<Include
			type="instance"
			source="DATA:Japan/Structures/JapanWallPiece.xml" />
	</Includes>
	<!-- Wall Piece (these alternate between Wall hubs and Wall segments on a case by case basis) -->
	<GameObject
		id="JapanWallSegmentPiece"
		inheritFrom="JapanWallPiece"
		EditorName="JapanWallSegment">
		<Draws>
			<ScriptedModelDraw
				id="ModuleTag_Draw"
				OkToChangeModelColor="true"
				StaticModelLODMode="true">
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="WORLD_BUILDER">
					<Model
						Name="JBWall_SKN" />
				</ModelConditionState>
			</ScriptedModelDraw>
		</Draws>
		<Behaviors>
			<WallBuilderBehavior
				id="ModuleTag_WallBuilder"
				StartInSecondaryModel="true">
			</WallBuilderBehavior>
		</Behaviors>
	</GameObject>
</AssetDeclaration>
