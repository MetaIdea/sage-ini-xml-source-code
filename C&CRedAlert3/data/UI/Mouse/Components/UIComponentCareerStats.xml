<?xml version="1.0" encoding="utf-8"?>

<!-- *********************************************************************** -->
<!-- *  Functionality for the career stats screen						   * -->
<!-- *********************************************************************** -->
<UIComponentCareerStats xmlns="uri:ea.com:eala:asset"
	Priority="500" DefaultRankImage="">
	<!--DefaultRankImage="VeterancyRank2_Allies"-->
	<!-- The order of career stats must exactly match the PersistentStatKeys in code -->

	<!-- Common Stats -->
	<CareerStat StatType="Int" StatLabel="STAT:CURRENT_WIN_STREAK" NoSummary="true"/>
	<CareerStat StatType="Int" StatLabel="STAT:CURRENT_LOSS_STREAK" NoSummary="true"/>
	<CareerStat StatType="Int" StatLabel="STAT:LONGEST_WIN_STREAK" NoSummary="true"/>
	<CareerStat StatType="Int" StatLabel="STAT:LONGEST_LOSING_STREAK" NoSummary="true"/>
	<CareerStat StatType="Int" StatLabel="STAT:TOTAL_MATCHES_PLAYED"/>
	<CareerStat StatType="Int" StatLabel="STAT:CAREER_LOSSES"/>
	<CareerStat StatType="Int" StatLabel="STAT:CAREER_WINS"/>
	<CareerStat StatType="Float" StatLabel="STAT:WIN_LOSS_RATIO" IsRatio="true" RatioNumerator="CareerWins" RatioDenominator="CareerLosses"/>
	<CareerStat StatType="Time" StatLabel="STAT:AVG_GAME_LENGTH" IsRatio="true" RatioNumerator="TotalTimePlayed" RatioDenominator="TotalMatchesPlayed"/>
	<CareerStat StatType="Time" StatLabel="STAT:TOTAL_TIME_PLAYED_OVERALL"/>
	<CareerStat StatType="Int" StatLabel="STAT:CAREER_STRUCTURES_BUILT"/>
	<CareerStat StatType="Int" StatLabel="STAT:CAREER_STRUCTURES_LOST"/>
	<CareerStat StatType="Int" StatLabel="STAT:CAREER_ENEMY_STRUCTURES_DESTROYED"/>
	<CareerStat StatType="Int" StatLabel="STAT:CAREER_ENEMY_STRUCTURES_CAPTURED"/>
	<CareerStat StatType="Int" StatLabel="STAT:CAREER_STRUCTURES_CAPTURED_BY_ENEMY"/>
	<CareerStat StatType="Float" StatLabel="STAT:CAREER_CAPTURE_RATIO" IsRatio="true" RatioNumerator="StructuresCaptured" RatioDenominator="StructuresCapturedByEnemy"/>
	<CareerStat StatType="Int" StatLabel="STAT:CAREER_SUPER_WEAPONS_BUILT"/>
	<CareerStat StatType="Int" StatLabel="STAT:CAREER_BRIDGES_DESTROYED"/>
	<CareerStat StatType="Int" StatLabel="STAT:CAREER_STRUCTURES_SOLD"/>
	<CareerStat StatType="Int" StatLabel="STAT:CAREER_UNITS_BUILT"/>
	<CareerStat StatType="Int" StatLabel="STAT:CAREER_UNITS_LOST"/>
	<CareerStat StatType="Int" StatLabel="STAT:RTS_UNITS_KILLED"/>
	<CareerStat StatType="Float" StatLabel="STAT:RTS_UNIT_KILL_DEATH_RATIO" IsRatio="true" RatioNumerator="UnitsKilled" RatioDenominator="UnitsLost"/>
	<CareerStat StatType="Int" StatLabel="STAT:RTS_AVERAGE_INCOME_RATE_PER_MINUTE" IsRatio="true" RatioNumerator="ResourcesGathered" RatioDenominator="TotalTimePlayed"/>
	<CareerStat StatType="Time" StatLabel="STAT:SECONDS_IN_LOW_POWER"/>
	<CareerStat StatType="Int" StatLabel="STAT:CAREER_RESOURCES_GATHERED"/>
	<CareerStat StatType="Int" StatLabel="STAT:CAREER_RESOURCES_SPENT"/>
	<CareerStat StatType="Int" StatLabel="STAT:NUMBER_OF_TIMES_FORMATION_PREVIEW_USED"/>
	<CareerStat StatType="Float" StatLabel="STAT:CAREER_EFFICIENCY_RATIO" IsRatio="true" RatioNumerator="ValueOfUnitsKilled" RatioDenominator="ValueOfUnitsLost"/>
	<CareerStat StatType="Int" StatLabel="STAT:CAREER_VALUE_OF_UNITS_LOST"/>
	<CareerStat StatType="Int" StatLabel="STAT:CAREER_VALUE_OF_UNITS_KILLED"/>
	<CareerStat StatType="Int" StatLabel="STAT:CAREER_FRIENDLY_FIRE_INCIDENTS"/>
	<CareerStat StatType="Int" StatLabel="STAT:CAREER_ACTIVATED_UNIT_ABILITIES"/>
	<CareerStat StatType="Int" StatLabel="STAT:CAREER_ACTIVATED_COMMANDER_POWERS"/>
	<CareerStat StatType="Int" StatLabel="STAT:CAREER_STRUCTURES_INFILTRATED"/>

	<!-- Campaign Specific Stats -->
	<CareerStat StatType="Int" StatLabel="STAT:TOTAL_CAMPAIGN_MISSIONS_PLAYED"/>

	<!-- Multiplayer Specific Stats -->
	<CareerStat StatType="Int" StatLabel="STAT:NUMBER_OF_TIMES_DISCONNECTED"/>
	<CareerStat StatType="Int" StatLabel="STAT:NUMBER_OF_TIMES_DESYNCED"/>
</UIComponentCareerStats>
