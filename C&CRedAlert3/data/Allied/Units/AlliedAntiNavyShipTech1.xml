						BoneName="BONE_GUN" />
			<!--	<WeaponMuzzleFlash
						WeaponSlotID="1"
						WeaponSlotType="PRIMARY_WEAPON"
						BoneName="MuzzleFlash_01" />	-->
					<WeaponLaunchBone
						WeaponSlotID="1"
						WeaponSlotType="PRIMARY_WEAPON"
						BoneName="FX_WEAPON_A" />
					<Turret
						TurretNameKey="Bone_Turret"
						TurretPitch="turret_pitch"
						TurretID="1" />
				</ModelConditionState>
        
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="FORMATION_PREVIEW">
					<Model
						Name="AUAntiNavyShipTech1_FP" />
				</ModelConditionState>
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="REALLYDAMAGED">
					<Model
						Name="AUAntiNavyShipTech1_SKN" />
					<Texture
						Original="AUAntiNavyShipTech1"
						New="AUAntiNavyShipTech1_D" />
				</ModelConditionState>

				<!-- TEMPORARY Magnetic Armor FX -->
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="WEAPONSTATE_ONE">
					<Model
						Name="AUAntiNavyShipTech1_SKN" />
				</ModelConditionState>

				<AnimationState
					ParseCondStateType="PARSE_DEFAULT"
					StateName="STATE_Land"
					Flags="START_FRAME_FIRST">
					<Animation
						AnimationName="AUAntiNavyShipTech1_TRANS"
						AnimationMode="ONCE_BACKWARDS" />
					<Script>
						Prev = CurDrawablePrevAnimationState()
						if Prev == "STATE_Water" then
						CurDrawableSetTransitionAnimState("TRANS_Land")
						end
					</Script>													
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="MOVING OVER_WATER"
					Flags="START_FRAME_LAST"
					StateName="STATE_Water">
					<Animation
						AnimationName="AUAntiNavyShipTech1_TRANS"
						AnimationMode="ONCE" />						
					<ParticleSysBone
						BoneName="NONE"
						FXParticleSystemTemplate="SUAntiStructureShipWake"
						FollowBone="true" />
					<Script>
						Prev = CurDrawablePrevAnimationState()
						if Prev == "STATE_Land" then
						CurDrawableSetTransitionAnimState("TRANS_Water")
						end
					</Script>						
				</AnimationState>
        
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="MOVING"
					StateName="STATE_Land"
					Flags="START_FRAME_FIRST">
					<Animation
						AnimationName="AUAntiNavyShipTech1_TRANS"
						AnimationMode="ONCE_BACKWARDS" />
					<Script>
						Prev = CurDrawablePrevAnimationState()
						if Prev == "STATE_Water" then
						CurDrawableSetTransitionAnimState("TRANS_Land")
						end
					</Script>						
		        </AnimationState>

				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="OVER_WATER"
					Flags="START_FRAME_LAST"
					StateName="STATE_Water">
					<Animation
						AnimationName="AUAntiNavyShipTech1_TRANS"
						AnimationMode="ONCE" />						
					<ParticleSysBone
						BoneName="NONE"
						FXParticleSystemTemplate="LargeShipWakeIdle"
						FollowBone="true" />
					<Script>
						Prev = CurDrawablePrevAnimationState()
						if Prev == "STATE_Land" then
						CurDrawableSetTransitionAnimState("TRANS_Water")
						end
					</Script>						
				</AnimationState>  
						        
				<AnimationState
					ParseCondStateType="PARSE_TRANSITION"
					StateName="TRANS_Land"
					Flags="START_FRAME_LAST">
					<Animation
						AnimationName="AUAntiNavyShipTech1_TRANS"
						AnimationMode="ONCE_BACKWARDS"/>
					<Script>
						CurDrawablePlaySound("AmphibiousWaterUnitToLand_ScrapeTreadsOut")
					</Script>    
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_TRANSITION"
					StateName="TRANS_Water"
					Flags="START_FRAME_FIRST">
					<Animation
						AnimationName="AUAntiNavyShipTech1_TRANS"
						AnimationMode="ONCE"/>
					<Script>
						CurDrawablePlaySound("ALL_Prospector_WaterSplashMS")
					</Script>
					<ParticleSysBone
						BoneName="NONE"
						FXParticleSystemTemplate="AUMCVWaterWakeSplash"
						FollowBone="true" />
				</AnimationState>		        
			</TruckDraw>

			<!-- TEMPORARY Magnetic Armor FX -->
			<ScriptedModelDraw
