					RetainSubObjects="true">
					<Model
						Name="EXMagneticShield" />
				</ModelConditionState>
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="DYING">
					<Model
						Name="" />
				</ModelConditionState>
				<AnimationState
					ParseCondStateType="PARSE_DEFAULT">
					<Script>
						CurDrawableHideSubObjectPermanently("TORUS01")
					</Script>													
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="USER_6">
					<Script>
						CurDrawableShowSubObjectPermanently("TORUS01")
					</Script>						
				</AnimationState>								
			</ScriptedModelDraw>

<!-- DRAW PARTICLES -->

      <ScriptedModelDraw
