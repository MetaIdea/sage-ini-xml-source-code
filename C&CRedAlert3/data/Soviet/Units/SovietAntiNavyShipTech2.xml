			Speed="75.0" />

		<SkirmishAIInformation
			UnitBuilderStandardCombatUnit="true" />
		<Draws>
			<ScriptedModelDraw
				id="ModuleTag_Draw"
				OkToChangeModelColor="true" >
				<ModelConditionState
					ParseCondStateType="PARSE_DEFAULT">
					<Model
						Name="SUAntiNavyShipTech2_SKN" />
					<WeaponFireFXBone
						WeaponSlotID="1"
						WeaponSlotType="PRIMARY_WEAPON"
						BoneName="TurretFX_" />
					<WeaponLaunchBone
						WeaponSlotID="1"
						WeaponSlotType="PRIMARY_WEAPON"
						BoneName="TurretFX_" />
					<ParticleSysBone
						BoneName="IdleFX01"
						FXParticleSystemTemplate="SUKrakenBubblesIdle"
						FollowBone="true" />
					<ParticleSysBone
						BoneName="IdleFX02"
						FXParticleSystemTemplate="SUKrakenBubblesIdle"
						FollowBone="true" />
				</ModelConditionState>

				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="FORMATION_PREVIEW">
					<Model
						Name="SUAntiNavyShipTech2_SKN" />
				</ModelConditionState>
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="DAMAGED">
					<Model
						Name="SUAntiNavyShipTech2_SKN" />
					<Texture
						Original="SUAntiNavyShipTech2"
						New="SUAntiNavyShipTech2_D" />
					<ParticleSysBone
						BoneName="IdleFX01"
						FXParticleSystemTemplate="Underwater_FireBubbles"
						FollowBone="true" />
					<ParticleSysBone
						BoneName="IdleFX01"
						FXParticleSystemTemplate="Underwater_FireFlash"
						FollowBone="true" />
					<ParticleSysBone
						BoneName="IdleFX01"
						FXParticleSystemTemplate="Underwater_FireSparks"
						FollowBone="true" />
					 <ParticleSysBone
						BoneName="IdleFX01"
						FXParticleSystemTemplate="Underwater_FireOil"
						FollowBone="true" />
				</ModelConditionState>
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="REALLYDAMAGED">
					<Model
						Name="SUAntiNavyShipTech2_SKN" />
					<Texture
						Original="SUAntiNavyShipTech2"
						New="SUAntiNavyShipTech2_D" />
					<ParticleSysBone
						BoneName="IdleFX01"
						FXParticleSystemTemplate="Underwater_FireBubbles"
						FollowBone="true" />
					<ParticleSysBone
						BoneName="IdleFX01"
						FXParticleSystemTemplate="Underwater_FireFlash"
						FollowBone="true" />
					<ParticleSysBone
						BoneName="IdleFX01"
						FXParticleSystemTemplate="Underwater_FireSparks"
						FollowBone="true" />
					 <ParticleSysBone
						BoneName="IdleFX01"
						FXParticleSystemTemplate="Underwater_FireOil"
						FollowBone="true" />
					<ParticleSysBone
						BoneName="IdleFX02"
						FXParticleSystemTemplate="Underwater_FireBubbles"
						FollowBone="true" />
					<ParticleSysBone
						BoneName="IdleFX02"
						FXParticleSystemTemplate="Underwater_FireFlash"
						FollowBone="true" />
					<ParticleSysBone
						BoneName="IdleFX02"
						FXParticleSystemTemplate="Underwater_FireSparks"
						FollowBone="true" />
					<ParticleSysBone
					   BoneName="IdleFX02"
					   FXParticleSystemTemplate="Underwater_FireOil"
					   FollowBone="true" />
				</ModelConditionState>
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="DYING">
					<Model
						Name="SUAntiNavyShipTech2_SKN" />
				</ModelConditionState>

				<AnimationState
					ParseCondStateType="PARSE_DEFAULT"
					Flags="RESTART_ANIM_WHEN_COMPLETE"
					StateName="STATE_bored">
					<Animation
						AnimationName="SUAntiNavyShipTech2_IDLA"
						AnimationMode="LOOP" />
					<Script>
						Prev = CurDrawablePrevAnimationState()
						if Prev == "STATE_Breached" then
						CurDrawableSetTransitionAnimState("STATE_FromBreach")
						end
					</Script>
				</AnimationState>

				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="USER_4"
					StateName="STATE_Breached">
					<Animation
						AnimationName="SUAntiNavyShipTech2_BREACH"
						AnimationMode="ONCE" />
					<FXEvent
						Frame="70"
						FireWhenSkipped="true"
						Effect="FX_SovietSubSurface" />
				</AnimationState>

				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="MOVING">
					<Animation
						AnimationName="SUAntiNavyShipTech2_MOV"
						AnimationMode="LOOP" />
					<ParticleSysBone
						BoneName="Propeller01"
						FXParticleSystemTemplate="SUKrakenBubblesMoving"
						FollowBone="true" />
					<ParticleSysBone
						BoneName="Propeller02"
						FXParticleSystemTemplate="SUKrakenBubblesMoving"
						FollowBone="true" />
					<Script>
						Prev = CurDrawablePrevAnimationState()
						if Prev == "STATE_Breached" or Prev == "STATE_ToBreach" then
						CurDrawableSetTransitionAnimState("STATE_FromBreach")
						end
					</Script>
				</AnimationState>

				<AnimationState
					ParseCondStateType="PARSE_TRANSITION"
					StateName="STATE_FromBreach">
					<Animation
						AnimationName="SUAntiNavyShipTech2_DIVE"
						AnimationMode="ONCE" />
				</AnimationState>

			</ScriptedModelDraw>
		</Draws>
