<?xml version="1.0" encoding="utf-8"?>
<AssetDeclaration xmlns="uri:ea.com:eala:asset" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xai="uri:ea.com:eala:asset:instance">
	<Tags></Tags>

  <!-- aka Aircraft Carrier -->
	<Includes>
		<!-- Base Object -->
    <Include type="instance" source="DATA:Allied/Units/AlliedAntiStructureShip.xml" />
	</Includes>	
	
  <!-- A.k.a. Aircraft Carrier -->
	<GameObject
		id="S03_AlliedAntiStructureShip_Easy"
		inheritFrom="AlliedAntiStructureShip"
    EditorName="S03_AlliedAntiStructureShip_Easy" 
    EditorSorting="CAMPAIGN_UNITS">				
		<Behaviors>
			<WeaponSetUpdate
				id="ModuleTag_WeaponSetUpdate"
        xai:joinAction="Replace">
				<WeaponSlotTurret 
          ID="1">
					<Weapon
						Ordering="PRIMARY_WEAPON"
						Template="S03_AlliedAntiStructureAttackDrones_Easy" />
					<TurretSettings
						TurretTurnRate="360"
						TurretPitchRate="360"
						AllowsPitch="true">
						<TurretAITargetChooserData
							ActiveWhenPerformingSpecialAbility="true" />
					</TurretSettings>
				</WeaponSlotTurret>
			</WeaponSetUpdate>
     </Behaviors>
	</GameObject>
</AssetDeclaration>
