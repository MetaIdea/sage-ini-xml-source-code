<?xml version="1.0" encoding="us-ascii"?>
<AssetDeclaration xmlns="uri:ea.com:eala:asset" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<Tags></Tags>
	<Includes>
    <Include
		type="all"
		source="ART:OD_Opera01_COL.w3x" />
    <Include
		type="instance"
		source="DATA:BaseObjects/BaseObject.xml" />
	</Includes>
	<GameObject
		id="OD_Opera01_Collapse"
		inheritFrom="BaseObject" 
		EditorName="OD_Opera01_Collapse">
		<Draws>
 

    <ScriptedModelDraw
         id="ModuleTag_Animated_Draw">

        <ModelConditionState
					ParseCondStateType="PARSE_DEFAULT">
          <Model
						Name="OD_Opera01_COL" />
        </ModelConditionState>

        <AnimationState
         ParseCondStateType="PARSE_DEFAULT">
          <Animation
            AnimationName="OD_Opera01_COL"
            AnimationBlendTime="0"
            AnimationMode="ONCE"/>
					<FXEvent
						Frame="1"
						FireWhenSkipped="true"
						Effect="FX_SpecialDebrisExplosion"
						Bone="FX_Bone_01" />
					<FXEvent
						Frame="8"
						FireWhenSkipped="true"
						Effect="FX_SpecialDebrisExplosion"
						Bone="FX_Bone_02" />
					<FXEvent
						Frame="15"
						FireWhenSkipped="true"
						Effect="FX_SpecialDebrisExplosion"
						Bone="FX_Bone_03" />
					<FXEvent
						Frame="15"
						FireWhenSkipped="true"
						Effect="FX_SpecialDebrisExplosion"
						Bone="FX_Bone_04" />
					<FXEvent
						Frame="9"
						FireWhenSkipped="true"
						Effect="FX_SpecialDebrisExplosion"
						Bone="FX_Bone_05" />
        </AnimationState>

     </ScriptedModelDraw>
      
	</Draws>
	  <Behaviors>
      <SlowDeath
				id="ModuleTag_Death"
				SinkDelay="0.4s"
				SinkRate="5"
				DestructionDelay="5s">
        <DieMuxData
					DeathTypes="ALL" />
      </SlowDeath>

      <!-- This Lifetime Update is set to 1 seconds to allow the default animation 
								(the death animation) to play -->
      <LifetimeUpdate
				id="ModuleTag_LifeTime"
				MinLifetime="5s"
				MaxLifetime="5s" />      
    </Behaviors>
    <Body>
      <PropBody
				id="ModuleTag_Body"/>
    </Body>   
</GameObject>
</AssetDeclaration>
