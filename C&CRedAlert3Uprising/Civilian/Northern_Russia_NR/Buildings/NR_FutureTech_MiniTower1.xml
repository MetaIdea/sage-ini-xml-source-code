  <Includes>
    <Include type="instance" source="DATA:BaseObjects/BaseCivilianStructureNoGarrisonDestructible.xml" />
    <Include type="all"	source="ART:NR_FutureTech_MiniTower1.W3X" />
    <Include type="instance" source="DATA:Allied/Props/AlliedBarracks_Debris.xml" />
    <Include type="instance" source="DATA:Civilian/Northern_Russia_NR/Props/NR_FutureTech_MiniTower1_Collapse.xml" />

