<?xml version="1.0" encoding="us-ascii"?>
<!-- The default rocket pod projectile -->
<AssetDeclaration xmlns="uri:ea.com:eala:asset" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xai="uri:ea.com:eala:asset:instance">
	<Tags></Tags>
	<Includes>
		<Include
			type="all"
			source="ART:SUAntiVehicleInfantry_Mine.w3x" />
		<!-- Base Object -->
		<Include
			type="instance"
			source="DATA:BaseObjects/BaseProjectile.xml" />
	</Includes>
	<GameObject
		id="SovietAntiVehicleInfantryMagneticBombProjectile"
		inheritFrom="BaseProjectile"
		Side="Soviet"
		EditorSorting="SYSTEM"
		KindOf="PROJECTILE INERT NO_COLLIDE HIDE_IF_FOGGED"
		EditorName="SovietAntiVehicleInfantryMagneticBombProjectile">
		<Draws>
			<ScriptedModelDraw
				id="ModuleTag_Draw"
				OkToChangeModelColor="true">
				<ModelConditionState
					ParseCondStateType="PARSE_DEFAULT">
					<Model
						Name="SUAntiVehicleInfantry_Mine" />
					<ParticleSysBone
						BoneName="FXTrail"
						FXParticleSystemTemplate="SovietV4Trail"
						FollowBone="true" />
				</ModelConditionState>
        <AnimationState
					ParseCondStateType="PARSE_DEFAULT">
          <Animation
						AnimNickName="IDL"
						AnimationName="SUAntiVehicleInfantry_Mine"
						AnimationMode="LOOP"
						AnimationSpeedFactorMin="0.8"
						AnimationSpeedFactorMax="1.2"/>
        </AnimationState>
			</ScriptedModelDraw>
		</Draws>
		<Behaviors>						
			<BezierProjectile
				id="ModuleTag_BezierProjectileBehavior"
				Flags="ORIENT_TO_FLIGHT_PATH DETONATE_CALLS_KILL"
				FirstHeightMin="20"
				FirstHeightMax="20"
				SecondHeightMin="20"
				SecondHeightMax="20"
				FirstPercentIndent="20"
				SecondPercentIndent="90"
				FlightPathAdjustDistPerSecond="100"
				/>
			<FXListBehavior id="ModuleTag_FXList">
				<DieMuxData DeathTypes="ALL" />
				<Event Index="onDeath" FX="FX_SOV_FlakTrooper_MagneticMineExplosion" />
		      </FXListBehavior>			
		</Behaviors>
	</GameObject>

	<GameObject
		inheritFrom="SovietAntiVehicleInfantryMagneticBombProjectile"
		id="SovietAntiVehicleInfantryMagneticBombProjectile_Veteran"
		EditorName="SovietAntiVehicleInfantryMagneticBombProjectile_Veteran">
		<Draws>
			<ScriptedModelDraw
				id="ModuleTag_Draw"
				xai:joinAction="Replace">
				<ModelConditionState
					ParseCondStateType="PARSE_DEFAULT">
					<Model
						Name="SUAntiVehicleInfantry_Mine" />
					<ParticleSysBone
						BoneName="FXTrail"
						FXParticleSystemTemplate="SovietV4Trail"
						FollowBone="true" />
				</ModelConditionState>
				<AnimationState
					ParseCondStateType="PARSE_DEFAULT">
					<Animation
						AnimNickName="IDL"
						AnimationName="SUAntiVehicleInfantry_Mine"
						AnimationMode="LOOP"
						AnimationSpeedFactorMin="0.8"
						AnimationSpeedFactorMax="1.2"/>
				</AnimationState>
			</ScriptedModelDraw>
		</Draws>
		<Behaviors>
			<CreateObjectDie
				id="ModuleTag_CreateObjectDie"
				CreationList="OCL_SovietMagneticBomb">
				<DieMuxData
					DeathTypes="ALL" />
			</CreateObjectDie>
		</Behaviors>
	</GameObject>

</AssetDeclaration>