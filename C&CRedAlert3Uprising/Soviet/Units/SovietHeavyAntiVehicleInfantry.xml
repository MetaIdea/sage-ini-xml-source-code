				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_TRANSITION"
					StateName="TRANS_fromParachuting" >
					<Animation
						AnimationName="SUHeavyAntiVehicleInfantry_MCND"
						AnimationMode="ONCE" />
				</AnimationState>

				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="DYING">
					<Animation
						AnimNickName="DTA"
						AnimationName="SUHeavyAntiVehicleInfantry_DIEE"
						AnimationMode="ONCE" />
					<Animation
						AnimNickName="DTB"
						AnimationName="SUHeavyAntiVehicleInfantry_DIEF"
						AnimationMode="ONCE" />
