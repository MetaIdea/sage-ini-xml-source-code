				<!-- tesla preattack -->
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="PREATTACK_A">
					<Animation
						AnimationName="SUHeavyAntiVehicleInfantry_ATKB1"
						AnimationMode="ONCE"
						UseWeaponTiming="true" />
          <ParticleSysBone
            BoneName="FXBONE_02"
            FXParticleSystemTemplate="TeslaCharge"
            FollowBone="true" />
				</AnimationState>
				<!-- attacking -->
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="FIRING_A">
