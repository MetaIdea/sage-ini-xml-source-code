					   AnimationMode="ONCE"
					   AnimationPriority="100"
					   AnimationBlendTime="15"/>
					<Animation
						AnimationName="SUHeavyAntiVehicleInfantry_AIFA"
						AnimationMode="ONCE"
						AnimationPriority="10"
						AnimationBlendTime="15"
						AnimationMustCompleteBlend="true" />		
					<Animation
						AnimationName="SUHeavyAntiVehicleInfantry_AIFC"
						AnimationMode="ONCE"
						AnimationPriority="10"
						AnimationBlendTime="15"
						AnimationMustCompleteBlend="true" />
					<Animation
