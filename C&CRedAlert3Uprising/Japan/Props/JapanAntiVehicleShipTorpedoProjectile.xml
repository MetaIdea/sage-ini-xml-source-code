<?xml version="1.0" encoding="us-ascii"?>

<AssetDeclaration xmlns="uri:ea.com:eala:asset" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xai="uri:ea.com:eala:asset:instance">
	<Tags/>
	<Includes>
		<Include
			type="all"
			source="ART:SP_Torpedo.w3x" />
		<!-- Base Object -->
		<Include
			type="instance"
			source="DATA:BaseObjects/BaseProjectile.xml" />
	</Includes>
	<GameObject
		id="JapanAntiVehicleShipTorpedoProjectile"
		inheritFrom="BaseProjectile"
		Side="Soviet"
		EditorName="JapanAntiVehicleShipTorpedoProjectile">
		<Draws>
			<ScriptedModelDraw
				id="ModuleTag_Draw">
				<ModelConditionState
					ParseCondStateType="PARSE_DEFAULT">
					<Model
						Name="SP_Torpedo" />
          <ParticleSysBone
						BoneName="NONE"
						FXParticleSystemTemplate="SPTorpedoMoveBubbles"
						FollowBone="false" />
          <ParticleSysBone
						BoneName="NONE"
						FXParticleSystemTemplate="JapanTorpedoTrail"
						FollowBone="false" />
          <ParticleSysBone
						BoneName="NONE"
						FXParticleSystemTemplate="JapanTorpedoTrailGlow"
						FollowBone="false" />
          <ParticleSysBone
						BoneName="NONE"
						FXParticleSystemTemplate="TorpedoWaterWake"
						FollowBone="false" />          
				</ModelConditionState>
			</ScriptedModelDraw>
		</Draws>
		<Behaviors>
			<FXListBehavior
				id="ModuleTag_FXList">
				<DieMuxData
					DeathTypes="ALL" />
				<Event
					Index="onDeath"
					FX="FX_WaterTorpedoExplosion" />
			</FXListBehavior>
			<BezierProjectile
				id="ModuleTag_BezierProjectileBehavior"
				Flags="ORIENT_TO_FLIGHT_PATH DETONATE_CALLS_KILL FIRE_STRAIGHT_THEN_CURVE"
        Type="TORPEDO" 
				FirstHeightMin="1"
				FirstHeightMax="1"
				SecondHeightMin="1"
				SecondHeightMax="1"
				FirstPercentIndent="30"
				SecondPercentIndent="70"
				FlightPathAdjustDistPerSecond="50.0"/>
		</Behaviors>
	</GameObject>

  <!-- VETERAN -->

  <GameObject
		inheritFrom="JapanAntiVehicleShipTorpedoProjectile"
    id="JapanAntiVehicleShipTorpedoProjectile_Veteran"
		EditorName="JapanAntiVehicleShipTorpedoProjectile_Veteran">
    <Draws>
      <ScriptedModelDraw
				id="ModuleTag_ScriptedModelDraw"
        xai:joinAction="Replace">
        <ModelConditionState
					ParseCondStateType="PARSE_DEFAULT">
          <Model
						Name="SP_Torpedo" />
          <ParticleSysBone
						BoneName="NONE"
						FXParticleSystemTemplate="SPTorpedoMoveBubbles"
						FollowBone="false" />
          <ParticleSysBone
						BoneName="NONE"
						FXParticleSystemTemplate="JapanTorpedoTrail_Vet"
						FollowBone="false" />
          <ParticleSysBone
						BoneName="NONE"
						FXParticleSystemTemplate="JapanTorpedoTrailGlow_Vet"
						FollowBone="false" />
          <ParticleSysBone
						BoneName="NONE"
						FXParticleSystemTemplate="TorpedoWaterWake"
						FollowBone="false" />
        </ModelConditionState>
      </ScriptedModelDraw>
    </Draws>
    <Behaviors>
      <FXListBehavior
				id="ModuleTag_FXList">
        <DieMuxData
					DeathTypes="ALL" />
        <Event
					Index="onDeath"
					FX="FX_WaterTorpedoExplosion_Vet" />
      </FXListBehavior>
      <BezierProjectile
				id="ModuleTag_BezierProjectileBehavior"
				Flags="ORIENT_TO_FLIGHT_PATH DETONATE_CALLS_KILL FIRE_STRAIGHT_THEN_CURVE"
        Type="TORPEDO" 
				FirstHeightMin="1"
				FirstHeightMax="1"
				SecondHeightMin="1"
				SecondHeightMax="1"
				FirstPercentIndent="30"
				SecondPercentIndent="70"
				FlightPathAdjustDistPerSecond="50.0"/>
    </Behaviors>
  </GameObject>
</AssetDeclaration>