		<Include type="all"	source="ART:JUFinalSquadronAircraft_D.xml" />
		<Include type="all"	source="ART:FXJapanTracer.xml" />
		<Include type="all"	source="ART:JUFinalSquadronAircraft_D.xml" />
	</Includes>
	<GameObject
		id="JapanFinalSquadronAircraft"
		Side="Japan"
		EditorSorting="SYSTEM"
		TransportSlotCount="0"
		IsTrainable="false"
		CommandSet="EmptyCommandSet"
		KindOf="CAN_CAST_REFLECTIONS CAN_ATTACK AIRCRAFT VEHICLE SUMMONED IGNORES_SELECT_ALL NO_COLLIDE SKIRMISH_AI_DONT_CONSIDER_THREAT"
		RadarPriority="UNIT"
		ThreatLevel="10"
		ProductionQueueType="AIRCRAFT"
		UnitCategory="AIRCRAFT"
		WeaponCategory="GUN"
		EditorName="JapanFinalSquadronAircraft">
		<DisplayName>JapanFinalSquadronAircraft</DisplayName>
		<ArmorSet
			Armor="JapanFinalSquadronAircraftArmor" />
		<LocomotorSet
			Locomotor="JapanFinalSquadronAircraftLocomotor"
			Condition="NORMAL"
			Speed="200.0" />
		<Draws>
			<ScriptedModelDraw
				id="ModuleTag_Draw"
				OkToChangeModelColor="true">
				<ModelConditionState
					ParseCondStateType="PARSE_DEFAULT">
					<Model
						Name="JUFinalSquadronAircraft" />
					<WeaponFireFXBone
						WeaponSlotID="1"
						WeaponSlotType="PRIMARY_WEAPON"
						BoneName="FX_WEAPON_" />
					<WeaponLaunchBone
						WeaponSlotID="1"
						WeaponSlotType="PRIMARY_WEAPON"
						BoneName="FX_WEAPON_" />
				</ModelConditionState>
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="REALLYDAMAGED">
					<Model
						Name="JUFinalSquadronAircraft" />
					<Texture
						Original="JUFinalSquadronAircraft"
						New="JUFinalSquadronAircraft_D" />

					<ParticleSysBone
						BoneName="None"
						FXParticleSystemTemplate="JapanVehicleDamagedFireMoving"
						FollowBone="true" />
					<ParticleSysBone
						BoneName="None"
						FXParticleSystemTemplate="JapanVehicleDamagedSparks"
						FollowBone="true" />
					<ParticleSysBone
						BoneName="None"
						FXParticleSystemTemplate="JapanVehicleDamagedSmoke"
						FollowBone="true" />
					<ParticleSysBone
						BoneName="None"
						FXParticleSystemTemplate="JapanVehicleDamagedLight"
						FollowBone="true" />          
				</ModelConditionState>	
				        
				<AnimationState
					ParseCondStateType="PARSE_DEFAULT">
					<ParticleSysBone
						BoneName="FX_JetGlow"
						FXParticleSystemTemplate="JapanSquadronJetGlow"
						FollowBone="true" />
					<ParticleSysBone
						BoneName="FX_JetGlow"
						FXParticleSystemTemplate="JapanSquadronJetTrail"
						FollowBone="true" />
					<ParticleSysBone
						BoneName="FX_JetGlow"
						FXParticleSystemTemplate="JapanSquadronJetLight"
						FollowBone="true" />
				</AnimationState>
        
			</ScriptedModelDraw>
			<TracerModelDraw
				id="ModuleTag_TracerModelDraw"
				MinLength="30.0"
				MaxLength="30.0"
				Width="15.0"
				MinSpeed="40"
				MaxSpeed="40"
				SweepSpeed="1.0"
				SpreadAngle="2.0"
				MinTracersPerFrame="0.2"
				MaxTracersPerFrame="0.3"
				FrameLifeTime="35"
				WeaponSlotType="PRIMARY_WEAPON"
				Texture="FXJapanTracer"
				UseAdditiveBlending="true"
				TracerHitFx="FX_JapanAutoCannonHit">
				<HeadColor
					r="1.0"
					g="1.0"
					b="1.0"
					a="1.0" />
				<TailColor
					r="1.0"
					g="1.0"
					b="1.0"
					a="1.0" />
				<ObjectStatusValidation
					ForbiddenStatus="WEAPON_UPGRADED_01" />
			</TracerModelDraw>
		</Draws>
		<Behaviors>
			<WeaponSetUpdate
				id="ModuleTag_WeaponSetUpdate">
				<WeaponSlotHardpoint
					ID="1">
					<Weapon
						Ordering="PRIMARY_WEAPON"
						Template="JapanFinalSquadronAircraftGun"/>
				</WeaponSlotHardpoint>
			</WeaponSetUpdate>
			<StrafeAreaTargetChooser
				id="ModuleTag_StrafeAreaTargetChooser"
				Radius="100.0"
				OverflowOptions="CHOOSE_RANDOM_POSITION">
				<ObjectFilter
					Rule="ALL"
					Relationship="ENEMIES"
					Exclude="INFANTRY">
				</ObjectFilter>
			</StrafeAreaTargetChooser>
			<StrafeAreaUpdate
				id="ModuleTag_StrafeAreaUpdate"
				WeaponName="JapanFinalSquadronAircraftKamikazeAttack"
				SweepFrequency="0.2"
				SweepAmplitude="5"
				DivingFloor="0"
				PreattackDistance="500"
				Radius="400"
				MinRadius="0"
				Options="FLEE_STRAIGHT_AHEAD USE_TARGET_CHOOSER CANNOT_IDLE"/>
	
			<BezierProjectile
				id="ModuleTag_BezierProjectileBehavior"
				FirstHeightMin="0"
				FirstHeightMax="20"
				SecondHeightMin="20"
				SecondHeightMax="20"
				FirstPercentIndent="33"
				SecondPercentIndent="66"
				Flags="IGNORE_CONTACT_POINTS DONT_SET_NO_ATTACK_STATUS ORIENT_TO_FLIGHT_PATH FIRE_STRAIGHT_THEN_CURVE"
				FlightPathAdjustDistPerSecond="100.0"
				MaxDistanceToTravel="99999.0"
				DisabledTypesToProcess="=$DISABLEDTYPE_ALL"/>

			<CreateObjectDie
				id="ModuleTag_KamikazeDeath"
				CreationList="JUFinalSquadronAircraft_Die_OCL">
				<DieMuxData
					DeathTypes="SUICIDED"/>
			</CreateObjectDie>
			<CreateObjectDie
				id="ModuleTag_Death"
				CreationList="JUFinalSquadronAircraft_Dying_OCL">
				<DieMuxData
					DeathTypes="ALL"
					DeathTypesForbidden="SUICIDED"/>
			</CreateObjectDie>
			<DestroyDie
				id="ModuleTag_Die">
				<DieMuxData
					DeathTypes="ALL" />
			</DestroyDie>

			<FXListBehavior
				id="ModuleTag_FXList">
				<DieMuxData
					DeathTypes="SUICIDED"
					ExemptStatus="PLAYER_POWER_1"/>
				<Event
					Index="onDeath"
					FX="FX_JapanSquadronDeathExplosion" />
			</FXListBehavior>
			<FXListBehavior
				id="ModuleTag_EnhancedKamikazeFXList">
				<DieMuxData
					DeathTypes="SUICIDED"
					RequiredStatus="PLAYER_POWER_1"/>
				<Event
					Index="onDeath"
					FX="FX_JapanEnhancedKamikaze" />
			</FXListBehavior>

			<Physics
				id="ModuleTag_Physics"/>

			<StancesBehavior
				id="ModuleTag_Stance"				
				StanceTemplate="OnlyAggressive" />

			<!-- Enhanced Kamikaze Player Power -->
			<xi:include
				href="DATA:Includes/JapanEnhancedKamikazeUpgradeStatus.xml" />
		</Behaviors>
		<AI>
			<AIUpdate
				id="ModuleTag_AIUpdate"
				AutoAcquireEnemiesWhenIdle="YES"				
				StateMachine="UnitAIStateMachine">
				<UnitAITargetChooserData
					IdleScanDelay="=$FAST_IDLE_SCAN_DELAY"
					CanPickDynamicTargets="true"
					CanOnlyAttackTargetsInFront="true"/>
			</AIUpdate>
		</AI>
		<Body>
			<ActiveBody
				id="ModuleTag_Body"
				MaxHealth="500"/>
		</Body>
		<ClientUpdates>
			<LargeGroupAudioClientUpdate id="LGACU">
				<Key>JAP_FinalSquadronAirplane</Key>
			</LargeGroupAudioClientUpdate>
		</ClientUpdates>
		<Geometry
			IsSmall="true">
			<Shape
				Type="BOX"
				MajorRadius="16.5"
				MinorRadius="10.0"
				Height="18.0"
				ContactPointGeneration="VEHICLE" >
				<Offset
					x="1.5"
					y="0.0"
					z="0.0" />
			</Shape>
		</Geometry>
		<AudioArraySound>
			<AudioEntry Sound="JAP_FinalSquadron_AirplaneMoveByLoop" AudioType="soundAmbient" />
		</AudioArraySound>
		<ShadowInfo
			Type="NONE" />
		<VisionInfo
			VisionRange="500"
			ShroudClearingRange="100"
		/>
		<CrusherInfo
			id="id_CrusherInfo"
			CrushableLevel="0" />
