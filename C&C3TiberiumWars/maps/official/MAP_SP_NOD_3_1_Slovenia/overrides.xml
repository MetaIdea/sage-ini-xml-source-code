			VisionRange="300"
			ShroudClearingRange="350" />
			<Body>
			<ActiveBody
				id="ModuleTag_Body"
				MaxHealth="1000.0" />
			</Body>
	</GameObject>
	<ArmorTemplate
		id="NODCommandoArmor"
		SideDamageScalar="110"
		RearDamageScalar="150">
		<Armor
			Damage="CANNON"
			Percent="50" />
		<Armor
			Damage="ROCKET"
			Percent="25" />
		<Armor
			Damage="GRENADE"
			Percent="50" />
		<Armor
			Damage="GUN"
			Percent="50" />
		<Armor
			Damage="SNIPER"
			Percent="500" />
	</ArmorTemplate>
	
	<!-- NOD Repair Drones Overrides -->
	<!-- Extended LeashRange / GuardMaxRange from 150 to 200 -->
	<GameObject id = "NodRepairDrone" inheritFrom="NodRepairDrone">
	<Behaviors>
        <AttachUpdate
          id="ModuleTag_Attach"
          Range="=$REPAIR_DRONE_LEASH_DISTANCE"
          CloseEnoughRange="20.0"
          Teleport="false"
          UseGeometry="true"
          DetachWhenParentHealed="true" 
          RequireFullyHealedToDetach="true"
          ScanForNewParentWhenDetached="true"
          DetachWhenParentOutOfSlavedRange="true"
          InitialAttachDelay="4.0s"
          ParentStatus="UNDERGOING_REPAIR"
          Flags="FIND_BEST_PARENT UNCONTAINED_ONLY"
				    >
          <ObjectFilter
            Rule="ANY"
            Include="VEHICLE HUGE_VEHICLE"
            Exclude="AIRCRAFT" 
            Relationship="ALLIES NEUTRAL" />
        </AttachUpdate>
  </Behaviors>
	</GameObject>
	
	<!-- NOD Avatar Overrides -->
	<!-- MaxHealth was: 12500 then 17,500 | Locked Speed at 50-->
	<GameObject id = "NODAvatar" inheritFrom="NODAvatar">
			<LocomotorSet
			Locomotor="NODAvatarLocomotor"
			Condition="NORMAL"
			Speed="50.0" />
		<Body>
			<ActiveBody
				id="ModuleTag_Body"
				MaxHealth="20000.0" />
		</Body>
	</GameObject>
	
	<!-- NOD Obelisk Overrides -->
	<!-- Making them harder to build and power | added 5000 heatlh -->
	<GameObject id="NODObelisk" inheritFrom="NODObelisk" 
		BuildCost="2000"
		BuildTime="45"
		EnergyProduction="-20">
		<Body>
			<ActiveBody
				id="ModuleTag_ActiveBody"
				MaxHealth="10000.0" />
		</Body>
	</GameObject>
	<!-- Changing Armor Completely to be better vs. all -->
	<ArmorTemplate
		id="NodObeliskArmor">
		<Armor
			Damage="CANNON"
			Percent="50" />
		<Armor
			Damage="ROCKET"
			Percent="25" />
		<Armor
			Damage="GRENADE"
			Percent="65" />
		<Armor
			Damage="GUN"
			Percent="25" />
		<Armor
			Damage="SNIPER"
			Percent="1" />
	</ArmorTemplate>

