	<!-- Exploding Barrel Overrides -->
	<!-- Damage was 1000; now: 4000 - Radius was 100, now: 100 -->
	<WeaponTemplate
		id="ExplodingBarrelWeapon"
		Name="ExplodingBarrelWeapon" 
		RadiusDamageAffects="ALLIES ENEMIES NEUTRALS"
		FireFX="FX_NODBombHit">
		<Nuggets>
			<DamageNugget 
				Damage="4000" 
				Radius="100" 
				DamageType="CANNON" 
				DeathType="NORMAL">
             <DamageScalarDetails 
             Scalar= "1%">
				<Filter
				Rule="NONE"
				Include="UNIQUE_UNIT"/>
			 </DamageScalarDetails>
			</DamageNugget>
		</Nuggets>
	</WeaponTemplate>
	
	<!-- NOD Commando Overrides -->
