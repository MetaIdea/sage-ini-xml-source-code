	<GameObject
       id = "NODCarryallInfantry" inheritFrom="NODCarryallInfantry">
		<Behaviors>
			<HordeTransportContain
				id="ModuleTag_Contain"
				ObjectStatusOfContained="UNSELECTABLE ENCLOSED"
				ContainMax="4"
				Slots="4"
				AllowEnemiesInside="false"
				AllowAlliesInside="false"
				AllowNeutralInside="false"
				AllowOwnPlayerInsideOverride="true"
				ShowPips="false"
				KillPassengersOnDeath="true"
				FlyOffMapOnEmpty="false">
				<PassengerFilter
					Rule="ANY"
					Include="INFANTRY" />
				<DieMuxData
					DeathTypes="ALL" />
				<PassengerData
					BonePrefix="BONEGARRISON">
					<Filter
						Rule="NONE"
						Include="INFANTRY" />
				</PassengerData>
			</HordeTransportContain>
		</Behaviors>
     </GameObject>
    	
	<!-- LiquidTiberiumTransport Overrides | MaxHealth was 5000 -->
	<GameObject id = "LiquidTiberiumTransport" inheritFrom="LiquidTiberiumTransport">
		<LocomotorSet
			Locomotor="NODLTTLocomotor"
			Condition="NORMAL"
			Speed="27.0" />
		<Body>
		<ActiveBody
				id="ModuleTag_02"
				MaxHealth="10000.0" />
		</Body>
	</GameObject>
	
	<!-- Removing Signature Generator from Tech Plant -->
	
	<LogicCommandSet
		id="NODTechAssemblyPlantCommandSet">
		<Cmd>Command_UpgradeNODEmpBurst</Cmd>
		<Cmd>Command_UpgradeNODLaserCapacitor</Cmd>
		<Cmd>Command_UpgradeNODDozerBlades</Cmd>
		<Cmd>Command_TogglePower</Cmd>
		<Cmd>Command_SelfRepair</Cmd>
		<Cmd>Command_Sell</Cmd>
	</LogicCommandSet>
		
	<!-- APC Overrides -->
	<!-- MaxHealth was: 3125 | Speed Reduced -->
	<GameObject
		id = "GDIAPC" inheritFrom="GDIAPC">
		<Body>
			<ActiveBody
				id="ModuleTag_Body"
				MaxHealth="2000" />
		</Body>
		<LocomotorSet
			Locomotor="GDIAPCLocomotor"
			Condition="NORMAL"
			Speed="40.0" />
		</GameObject>
		
		<ArmorTemplate
		id="GDIGuardianAPCArmor"
		SideDamageScalar="110"
		RearDamageScalar="150">
		<Armor
			Damage="CANNON"
			Percent="100" />
		<Armor
			Damage="ROCKET"
			Percent="125" />
		<Armor
			Damage="GRENADE"
			Percent="75" />
		<Armor
			Damage="GUN"
			Percent="75" />
		<Armor
			Damage="SNIPER"
			Percent="5" />
		</ArmorTemplate>	
	<!-- Reduced Range and Damage -->
	<WeaponTemplate
	id="GDIAPCAutoCannon"
	Name="GDIAPCAutoCannon"
	FireSoundPerClip="GDI_GuardianAPC_MachineGunFire"
	FireFX="FX_GDIRifleManFire"
	AttackRange="175.0" 
	WeaponSpeed="999999.0" 
	RadiusDamageAffects="ALLIES ENEMIES NEUTRALS"
	AntiMask="ANTI_GROUND ANTI_AIRBORNE_VEHICLE ANTI_AIRBORNE_INFANTRY"
	CanFireWhileMoving="true"
	ClipSize="4"
		>
		<!-- 	FireFX = "FX_GDI_PitbullMachineGunFireAudio" -->
		<!--
 	FiringLoopSound="GDI_GuardianAPC_MachineGunFire"
	FiringLoopSoundContinuesDuringReload="true"
-->


		<FiringDuration
				MinSeconds="0.1s"
				MaxSeconds="0.1s" />
		<ClipReloadTime
			MinSeconds="0.25s"
			MaxSeconds="0.25s"
		/>
		<Nuggets>
			<DamageNugget 
				Damage="26.0" 
				Radius="0.0" 
				DelayTimeSeconds="0.0s" 
				DamageType="GUN" 
				DamageFXType="GDI_MACHINEGUN"		
				DeathType="NORMAL" />
			<SuppressionNugget
				Radius="25.0"
				Suppression="25"
				DurationSeconds="2s" />
		</Nuggets>
	</WeaponTemplate>

	<!-- Pitbull Overrides -->
	<!-- MaxHealth was: 200 | Speed Reduced -->
	<GameObject id = "GDIPitbull" inheritFrom="GDIPitbull">
		<Body>
			<ActiveBody
				id="ModuleTag_Body"
				MaxHealth="1500" />
		</Body>
		<LocomotorSet
			Locomotor="GDIPitbullLocomotor"
			Condition="NORMAL"
			Speed="80.0" />
		</GameObject>
		
	<!-- Power Plant Overrides -->
	<!-- Energy Production moved to 15 -->
	<GameObject
		id="GDIPowerPlant"
		inheritFrom="GDIPowerPlant"
		ButtonImage="Button_GDIPowerPlant"
		SelectPortrait="Portrait_GDIPowerPlant"
		Side="GDI"
		EditorSorting="STRUCTURE"
		TransportSlotCount="1"
		BuildCost="800"
		BuildTime="8"
		EnergyProduction="15"
		EnergyBonus="10"
		CommandSet="GDIPowerPlantCommandSet"
		KindOf="STRUCTURE SELECTABLE IMMOBILE CAN_CAST_REFLECTIONS FS_POWER NOT_AUTOACQUIRABLE AUTO_ACQUIRABLE_BY_AI COVER"
		RadarPriority="STRUCTURE"
		PlacementViewAngle="315d"
		ProductionQueueType="MAIN_STRUCTURE"
		BuildPlacementTypeFlag="MAIN_STRUCTURE"
		EditorName="GDIPowerPlant"
		Description="Desc:GDIPowerPlant"
		TypeDescription="Type:GDIPowerPlant">	
		</GameObject>
		
	<!-- Mammoth Overrides -->
